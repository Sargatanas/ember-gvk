<div class="form">
    <header class="form-header">
        <label class="form-header__element" for="team-id">
            Номер бригады:
            <input 
                type="number" 
                id="add-team-id" 
                name="id" 
                value="1">
        </label>
        
        <label 
            class="form-header__element" 
            for="add-date">
                Дата (в формате ДД.ММ.ГГГГ):
                <input 
                    type="date" 
                    id="add-date" 
                    name="id"
                    value={{getFormDate date.value}}>
        </label>
            
        <button 
            class="form-header__element form-header__element_button" 
            id="button"
            onclick={{action "showTable"}}>
                Показать
        </button>
    </header>
   <main 
        class="form-body" 
        id="table">
            {{outlet}}  
            {{#if isShow}}
                {{#each week as |day|}}
                    {{table-form hours=hours day=day date=date status=status}}
                {{/each}}
            {{/if}}                  
    </main>
</div>
