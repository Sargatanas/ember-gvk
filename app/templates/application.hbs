<div class="form">
    <header class="form-header">
        <label class="form-header__element" for="team-id">
            Номер бригады:
            <input 
                type="number" 
                id="add-team-id" 
                name="id" 
                value="101">
        </label>
        
        <label 
            class="form-header__element" 
            for="add-date">
                Дата (в формате ДД.ММ.ГГГГ):
                <input 
                    type="date" 
                    id="add-date" 
                    name="id"
                    value={{getDateForm date.value}}>
        </label>
            
        <button 
            class="form-header__element form-header__element_button" 
            id="button"
            {{action "createTask" on="focusIn"}}
            {{action "showTable" on="click"}}>
                Показать таблицу
        </button>
            
        <button 
            class="form-header__element form-header__element_button" 
            id="button"
            {{action "createTask"}}>
                Вывести задачи
        </button>
    </header>
   <main 
        class="form-body" 
        id="table"> 
            {{#if isShowTable}}
                {{#each week as |day|}}
                    {{table-form hours=hours 
                                 day=day 
                                 date=date 
                                 status=status 
                                 taskList=taskList}}
                {{/each}}
            {{/if}}              
    </main>
</div>
