<div class="element-header">
        <div class="element-header__cell element-header__cell_day">
            {{toUpperCase day.rus}}
        </div>
        <div class="element-header__cell element-header__cell_data" id='{{day.en}}'></div>
        <div class="element-header__cell element-header__cell_total-tasks">
            Всего задач: <span id='total-tasks' class="element-header__cell-content"></span>
        </div>
    </div>
    <table class="element-body" id="table-content">
        <tr class="element-body__row">
            <th class="element-body__cell">
                Время
            </th>
            <th class="element-body__cell">
                Детали задачи
            </th>
        </tr>
        {{#each times as |time|}}
            {{table-row time=time day=day.en}}
        {{/each}}        
    </table>